<h2>Descriptions</h2>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Text</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_descriptions.each do |admin_description| %>
      <tr>
        <td><%= admin_description.id %></td>
        <td><%= admin_description.name %></td>
        <td><%= link_to admin_description.text, admin_description %></td>
        <td><%= link_to 'Edit', edit_admin_description_path(admin_description) %></td>
        <td><%= link_to 'Destroy', admin_description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Description', new_admin_description_path %>

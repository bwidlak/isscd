<ol class="breadcrumb">
  <li><a href="#">Images</a></li>
  <li class="active"><%= @admin_image.name %></li>
</ol>

<h1>Editing <%= @admin_image.name %></h1>

<%= form_for @admin_image, html: { class: "form-horizontal", role: "form" } do |f| %>
  <% if @admin_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_image.errors.count, "error") %> prohibited this admin_image from being saved:</h2>

      <ul>
      <% @admin_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


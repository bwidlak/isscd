<h2>Images</h2>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Preview</th>
      <th>Name</th>
      <th>Url</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_images.each do |admin_image| %>
      <tr>
        <td><%= link_to admin_image.id, admin_image %></td>
        <td><%= image_tag admin_image.square_75x75 %></td>
        <td><%= admin_image.name %></td>
        <td><%= admin_image.url %></td>
        <td><%= link_to 'Edit', edit_admin_image_path(admin_image) %></td>
        <td><%= link_to 'Destroy', admin_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_admin_image_path %>

<%= render 'breadcrumb', object: @admin_project %>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Linked?</th>
      <th>Name</th>
      <th>Text</th>
    </tr>
  </thead>

  <tbody>
    <%= form_tag update_multiple_descriptions_admin_project_path, method: :put do %>
      <% @admin_descriptions.each do |description| %>
        <%= fields_for "project_assets[]", description do |f| %>
          <tr>
            <td><%= description.id %></td>
            <td><%= check_box_tag "project_assets[]", description.id, @admin_project.descriptions.include?(description) %></td>
            <td><%= description.name %></td>
            <td><%= description.text %></td>
          </tr>
        <% end %>
      <% end %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= submit_tag "Save", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </tbody>
</table>

<%= render 'breadcrumb', object: @admin_project %>
<article class="row">
  <%= form_tag update_multiple_images_admin_project_path, method: :put, html: { class: "form-horizontal", role: "form" } do %>
    <% @admin_images.each do |image| %>
      <%= fields_for "project_assets[]", image do |f| %>
        <div class="col-lg-3">
          <p><%= File.basename image.square_75x75 %></p>
          <p><%= image.id %></p>
          <div class="form-group">
            <%= f.label :name, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= image_tag image.square_150x150 %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label>
                  <%= check_box_tag "project_assets[]", image.id, @admin_project.images.include?(image) %>
                  Linked?
                </label>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag "Save", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</article>

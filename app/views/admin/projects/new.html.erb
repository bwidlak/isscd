<h1>New admin_project</h1>

<%= form_for @admin_project, html: { class: "form-horizontal", role: "form" } do |f| %>
  <% if @admin_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_project.errors.count, "error") %> prohibited this admin_project from being saved:</h2>

      <ul>
      <% @admin_project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sequence, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :sequence, class: 'form-control' %>
    </div>
  </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :parent %>
          Will have sub projects?
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :published %>
          Published
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', admin_projects_path %>

<%= render 'breadcrumb', object: @admin_project %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @admin_project.title %>
</p>

<p>
  <strong>Permalink:</strong>
  <%= @admin_project.permalink %>
</p>

<p>
  <strong>Sequence:</strong>
  <%= @admin_project.sequence %>
</p>

<p>
  <strong>Published:</strong>
  <%= @admin_project.published %>
</p>

<div class="row">
  <div class="col-lg-12">
    <h3>Images</h3>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>#</th>
          <th>Preview</th>
          <th>Name</th>
        </tr>
      </thead>

      <tbody>
        <% @admin_project.images.each do |img| %>
          <tr>
            <td><%= link_to img.id, img %></td>
            <td><%= image_tag img.square_75x75 %></td>
            <td><%= img.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Edit images', edit_multiple_images_admin_project_path, class: "btn btn-default btn-primary active", role: "button" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h3>Descriptions</h3>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Text</th>
        </tr>
      </thead>

      <tbody>
        <% @admin_project.descriptions.each do |descr| %>
          <tr>
            <td><%= descr.id %></td>
            <td><%= descr.name %></td>
            <td><%= link_to descr.text, admin_description_path(descr) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Edit descriptions', edit_multiple_descriptions_admin_project_path, class: "btn btn-default btn-primary active", role: "button" %>
  </div>
</div>

<%= link_to 'Edit', edit_admin_project_path(@admin_project) %> |
<%= link_to 'Back', admin_projects_path %>

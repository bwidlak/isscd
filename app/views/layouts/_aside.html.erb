<aside class="col-sm-0 col-md-3 sidebar">

  <div class="logo visible-xs-block visible-sm-block">
    <h1><p class="text-center">ISS Construction &&nbsp;Design</p></h1>
  </div>

  <div class="logo visible-md-block visible-lg-block">
    <h1><p>ISS Construction &&nbsp;Design</p></h1>
  </div>

  <div class="contact_number visible-xs-block visible-sm-block">
    <h2><p class="text-center"><%= contact_number %></p></h2>
  </div>

  <nav class="navbar" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="main-menu">
        <% @projects.parents_only.each do |p| %>
          <li class="menu-item <%= 'selected' if @project.parent == p || @project == p %>">
            <%= link_to p, class: 'first-level' do %>
              <%= p.title %>
              &nbsp;
              <%= content_tag(:i, '', class:"fa fa-caret-down") if p.children.present? %>
            <% end %>
            <% if p.children.present? %>
              <ul class="sub-menu">
                <% p.children.each do |ch| %>
                  <li class="menu-item <%= 'selected' if @project == ch %>">
                    <%= link_to ch.title, ch, class: 'second-level' %>
                  </li>
                <% end %>
              </ul> 
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="contact_number visible-md-block visible-lg-block">
    <h2><p><%= contact_number %></p></h2>
  </div>

  <div class="socialmedias visible-md-block visible-lg-block">
    <i class="fa fa-facebook-square"></i>
    <i class="fa fa-linkedin-square"></i>
  </div>

</aside>

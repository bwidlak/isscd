<section class="project-layout one-two">

  <div class="col-md-12 col-lg-6">

    <article class="row">
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-12 image-center" style="background-image:url(<%= @project.images.all[0].medium_800 %>);">
        <div class="image-description">
          <h4>Image description</h4>
          <h5>second</h5>
        </div>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-6 image-center" style="background-image:url(<%= @project.images.all[1].medium_800 %>);">

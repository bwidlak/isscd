<section class="project-layout one-two">

  <div class="col-lg-12">

    <article class="row">
      <div class="col-lg-12 map-center" id="map">

        <% content_for :javascripts do %>
          <script type='text/javascript'>
            handler = Gmaps.build('Google');
            handler.buildMap({
                provider: {
                  draggable: false,
                  scrollwheel: false
                },
                internal: {id: 'map'}
              }, function(){
              markers = handler.addMarkers(<%=raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
            });
          </script>
        <% end %>
      </div>
    </article>

    <article class="row">
      <div class="col-lg-12">
        <% if @project.descriptions.present? %>
          <article class="row">
            <div class="col-md-12 visible-md-block visible-lg-block">
              <%= dat_markdown(@project.descriptions.first.text) %>
            </div>
          </article>
        <% end %>
      </div>
    </article>

    <article class="row">
      <% if @project.children.present? %>
        <% @project.children.each do |child| %>
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-6 image-center" style="background-image:url(<%= child.images.all[0].medium_800 %>);">
            <% if child.images.all[0].description.present? %>
              <div class="image-description">
                <%= dat_markdown(child.images.all[0].description) %>
              </div>
            <% end %>
          </div>
        <% end %>  
      <% end %>
    </article>


  </div>

</section>

<section class="project-layout one-two">

  <div class="col-lg-12">

    <article class="row">
      <div class="col-lg-12 image-center" style="background-image:url(<%= @project.images.all[0].medium_800 %>);">
        <% if @project.images.all[0].description.present? %>
          <div class="image-description">
            <%= dat_markdown(@project.images.all[0].description) %>
          </div>
        <% end %>
      </div>
    </article>

    <article class="row">
      <div class="col-lg-12">
        <% if @project.descriptions.present? %>
          <article class="row">
            <div class="col-md-12 visible-md-block visible-lg-block">
              <%= dat_markdown(@project.descriptions.first.text) %>
            </div>
          </article>
        <% end %>
      </div>
    </article>

    <article class="row">

      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-6 image-center" style="background-image:url(<%= @project.images.all[0].medium_800 %>);">
        <% if @project.images.all[0].description.present? %>
          <div class="image-description">
            <%= dat_markdown(@project.images.all[0].description) %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-6 image-center" style="background-image:url(<%= @project.images.all[1].medium_800 %>);">
        <% if @project.images.all[0].description.present? %>
          <div class="image-description">
            <%= dat_markdown(@project.images.all[0].description) %>
          </div>
        <% end %>
      </div>
      
    </article>


  </div>

</section>

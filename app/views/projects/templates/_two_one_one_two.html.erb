<section class="project-layout one-two">

  <div class="col-md-12 col-lg-6">
    <% if @project.descriptions.present? %>
      <article class="row">
        <div class="col-md-12">
          <%= dat_markdown(@project.descriptions.first.text) %>
        </div>
      </article>
    <% end %>

    <article class="row">
      <div class="col-md-12 visible-lg-block">
        <form role="form">
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="your name">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail2" placeholder="mobile / email address">
          </div>
          <div class="form-group">
            <textarea class="form-control" rows="6" placeholder="message"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </article>

  </div>

  <div class="col-md-12 col-lg-6">

    <article class="row">
      <div class="col-xs-6 col-sm-6 col-md-3 col-lg-12 image-center" style="background-image:url(<%= @project.images.all[0].medium_800 %>);">
        <% if @project.images.all[0].description.present? %>
          <div class="image-description">
            <%= dat_markdown(@project.images.all[0].description) %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-6 col-sm-6 col-md-3 col-lg-6 image-center" style="background-image:url(<%= @project.images.all[1].medium_800 %>);">
        <% if @project.images.all[1].description.present? %>
          <div class="image-description">
            <%= dat_markdown(@project.images.all[1].description) %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-12 visible-xs-block visible-sm-block">
        <form role="form">
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="your name">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail2" placeholder="mobile / email address">
          </div>
          <div class="form-group">
            <textarea class="form-control" rows="6" placeholder="message"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-6 image-center" style="background-image:url(<%= @project.images.all[2].medium_800 %>);">
        <% if @project.images.all[2].description.present? %>
          <div class="image-description">
            <%= dat_markdown(@project.images.all[2].description) %>
          </div>
        <% end %>
      </div>

      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-12 image-center" style="background-image:url(<%= @project.images.all[3].medium_800 %>);">
        <% if @project.images.all[3].description.present? %>
          <div class="image-description">
            <%= dat_markdown(@project.images.all[3].description) %>
          </div>
        <% end %>
      </div>

      <div class="col-md-12 visible-md-block">
        <form role="form">
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="your name">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail2" placeholder="mobile / email address">
          </div>
          <div class="form-group">
            <textarea class="form-control" rows="6" placeholder="message"></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>

    </article>
  </div>

</section>
